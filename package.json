{
  "name": "flyerscord-helper",
  "version": "3.1.0",
  "description": "Flyers' Discord Helper Bot",
  "main": "src/bot.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json --noEmit",
    "build:test": "tsc -p tsconfig.test.json --noEmit",
    "start": "tsx src/bot.ts",
    "start:dev": "pnpm run build && tsx src/bot.ts",
    "start:watch": "tsx watch src/bot.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(ts|json)\"",
    "update": "npm-check -u",
    "depcheck": "npm-check",
    "generate-config": "tsx src/createDefaultConfig.ts",
    "prepare": "husky",
    "test": "jest --no-coverage",
    "test:coverage": "jest --coverage",
    "circular-deps": "madge --circular --extensions ts src",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Flyerscord/Flyerscord-Bot.git"
  },
  "author": "Matt Strenk",
  "license": "GPLV3",
  "bugs": {
    "url": "https://github.com/Flyerscord/Flyerscord-Bot/issues"
  },
  "homepage": "https://github.com/Flyerscord/Flyerscord-Bot#readme",
  "dependencies": {
    "@atproto/api": "^0.18.8",
    "@discordjs/builders": "^1.13.1",
    "@neondatabase/serverless": "^1.0.2",
    "axios": "^1.13.2",
    "canvas": "^3.2.0",
    "discord.js": "^14.25.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "express": "^5.2.1",
    "imagekit": "^6.0.0",
    "imgur": "^2.5.0",
    "jsdom": "^27.4.0",
    "nhl-api-wrapper-ts": "^1.0.0",
    "node-schedule": "^2.1.1",
    "request": "^2.88.2",
    "sharp": "^0.34.5",
    "stumper": "^2.1.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^25.0.3",
    "@types/node-schedule": "^2.1.7",
    "@types/request": "^2.48.12",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",

    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-drizzle": "^0.2.3",
    "eslint-plugin-prettier": "^5.5.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "madge": "^8.0.0",
    "npm-check": "^6.0.1",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "madge": {
    "detectiveOptions": {
      "ts": {
        "skipAsyncImports": true,
        "skipTypeImports": true
      }
    }
  }
}
