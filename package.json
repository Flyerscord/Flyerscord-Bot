{
  "name": "flyerscord-helper",
  "version": "2.0.2",
  "description": "Flyers' Discord Helper Bot",
  "main": "src/bot.ts",
  "scripts": {
    "copy-assets": "npx copyfiles -u 1 src/**/*.png dist/",
    "build": "npx tsc -p tsconfig.json && npm run copy-assets",
    "build:no-assets": "npx tsc -p tsconfig.json",
    "build:test": "npx tsc -p tsconfig.test.json",
    "start": "npx tsx src/bot.ts",
    "start:check": "npm run typecheck && npm start",
    "start:dev": "npx tsx watch src/bot.ts",
    "typecheck": "npx tsc --noEmit",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint . --fix",
    "format": "npx prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "update": "npx npm-check -u",
    "depcheck": "npx npm-check",
    "generate-config": "npx tsx src/createDefaultConfig.ts",
    "prepare": "husky",
    "test": "npm run build:test && npx jest --no-coverage",
    "test:coverage": "npm run build:test && npx jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/strenkml/NHL-Helper-Bot.git"
  },
  "author": "Matt Strenk",
  "license": "GPLV3",
  "bugs": {
    "url": "https://github.com/strenkml/NHL-Helper-Bot/issues"
  },
  "homepage": "https://github.com/strenkml/NHL-Helper-Bot#readme",
  "dependencies": {
    "@atproto/api": "^0.14.4",
    "@discordjs/builders": "^1.11.2",
    "axios": "^1.10.0",
    "canvas": "^2.11.2",
    "discord.js": "^14.21.0",
    "enmap": "^5.9.10",
    "express": "^4.21.1",
    "imagekit": "^5.2.0",
    "imgur": "^2.5.0",
    "jsdom": "^25.0.1",
    "nhl-api-wrapper-ts": "^1.0.0",
    "node-schedule": "^2.1.1",
    "request": "^2.88.2",
    "sharp": "^0.33.5",
    "stumper": "^1.1.0"
  },
  "devDependencies": {
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.14",
    "@types/jsdom": "^21.1.7",
    "@types/lodash": "^4.17.19",
    "@types/node": "^22.8.2",
    "@types/node-schedule": "^2.1.7",
    "@types/request": "^2.48.12",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.5.1",
    "husky": "^9.1.7",
    "npm-check": "^6.0.1",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.6"
  }
}