// This config is what is pulled into the other tsconfig files
{
  "compilerOptions": {
    /* Language */
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021"],

    /* Paths and Module Resolution */
    "baseUrl": "./",
    "paths": {
      "@root/*": ["*"],
      "@common/*": ["src/common/*"],
      "@modules/*": ["src/modules/*"],
      "@cli/*": ["src/cli/*"]
    },

    /* Type Declarations */
    "typeRoots": ["src/common/types"],
    "resolveJsonModule": true,

    /* Output */
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Strictness */
    "strict": true,
    "skipLibCheck": true,

    /* Performance */
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo"
  }
}
