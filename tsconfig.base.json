{
  "compilerOptions": {
    /* Language */
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021"],

    /* Paths and Module Resolution */
    "baseUrl": "./",
    "paths": {
      "@root/*": ["*"],
      "@common/*": ["src/common/*"],
      "@modules/*": ["src/modules/*"]
    },

    /* Type Declarations */
    "typeRoots": ["src/common/types", "node_modules/@types"],
    "resolveJsonModule": true,

    /* Output */
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Strictness */
    "strict": true,
    "skipLibCheck": true
  }
}
